# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[**.js]
indent_style = space
indent_size = 2

[**.{css,scss}]
indent_style = space
indent_size = 2

[**.rb]
indent_style = space
indent_size = 2

[**.{html,html.erb}]
indent_style = space
indent_size = 2
